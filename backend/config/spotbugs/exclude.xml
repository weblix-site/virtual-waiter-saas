<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
  <!-- DTOs/records are immutable in practice; ignore rep exposure for API/service view models -->
  <Match>
    <Class name="~md\.virtualwaiter\.api\..*"/>
    <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
  </Match>
  <Match>
    <Class name="~md\.virtualwaiter\.service\..*"/>
    <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
  </Match>
  <Match>
    <Class name="~md\.virtualwaiter\.i18n\..*"/>
    <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
  </Match>
  <Match>
    <Class name="~md\.virtualwaiter\.otp\..*"/>
    <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
  </Match>
</FindBugsFilter>
